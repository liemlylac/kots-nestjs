{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": false,
    "paths": {
      "@config/*": ["src/config/*"],
      "@app/common": ["src/common/index"],
      "@app/mail": ["src/mail/index"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
